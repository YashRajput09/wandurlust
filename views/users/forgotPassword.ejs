<% layout('/layouts/boilerplate') -%>

<div class="row mt-5 ">
    <div class="col-md-8 offset-md-2 offset-lg-3 col-lg-6">
        <h3 class="mb-3"><span class="fs-1 text-primary text-opacity-75">Reset</span> your Password.</h3>
        <form action="/user/forgotPassword" method="POST" class="needs-validation" novalidate>

            <div class="mb-3">  
                <label for="email" class="form-label">Email</label>
                <input name="email" type="text" class="form-control" id="email" required>
                <div class="valid-feedback">looks good!</div>
            </div>

            <button class="btn btn-primary rounded-pill px-3">Submit</button>
        </form>
    </div>
</div>