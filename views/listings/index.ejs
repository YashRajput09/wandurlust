<!-- all listings -->
<div class="row row-cols-lg-4 row-cols-md-3 row-cols-sm-2 row-cols-1">
    <% for(listing of allListings){ %>

        <a href="/listings/<%=listing._id%>" class="listing-links">
            <div class="card listing-card col">
                <img src="<%= listing.image.url %>" class="card-img-top"  style="height: 20rem;" alt="Listing Image">
                <!-- overlay -> img select effect  -->
                <div class="card-img-overlay"></div>

                <div class="card-body">
                    <p class="card-text">
                        <b> <%= listing.title %> </b>
                        <br>
                        &#8377;<%= listing.price.toLocaleString('en-IN') %>/night 
                        <i class="tax-info">&ensp; +18% GST</i>
                    </p>
                </div>
            </div>
        </a>
    <% } %> 
</div>