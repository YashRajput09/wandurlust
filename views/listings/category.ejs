
<% layout('/layouts/boilerplate') -%>
<style>
#filters {
  display: flex;
  flex-wrap: wrap;
  margin-block:  1em;
  align-items: center;
}
.filter {
  text-align: center;
  margin-inline: 1rem;
  opacity: 0.7;
}
.filter:hover {
  opacity: 1;
}
.filter i{
  font-size: 3vh;
}
.filter p{
  font-size: 0.8rem;
  margin: 0;
}

.tax-toggle{
  border: 1px solid #00000063;
  border-radius: 12px;
  padding: .8rem;
  font-size: small;
  /* margin-left: 3.5rem; */
}
.tax-toggle:hover{
  border: 1px solid #000;
}

.tax-toggle-child{
  align-content: center;
}

.tax-info{
  display: none;
}

.filter button{
  border: none;
  background-color: transparent;
  padding: 0;
}
</style>

<br>
<form action="/listings/category" method="GET">
<div id="filters">
  <div class="filter">
    <button type="submit" name="category" value="Trending">
      <div><i class="fa-solid fa-fire"></i></div>
      <p>Trending</p>
  </button>
  </div>

  <div class="filter">
    <button type="submit" name="category" value="Rooms">
      <div><i class="fa-solid fa-bed"></i></div>
      <p>Rooms</p>
    </button>
  </div>

  <div class="filter">
    <button type="submit" name="category" value="Iconic Cities">
      <div><i class="fa-solid fa-mountain-city"></i></div>
      <p>Iconic Cities</p>
    </button>
  </div>
  <div class="filter">
    <button type="submit" name="category" value="Snow">
      <div><i class="fa-regular fa-snowflake"></i></div>
      <p>Snow</p>
    </button>
  </div>
  <div class="filter">
    <button type="submit" name="category" value="Castales">
      <div><i class="fa-brands fa-fort-awesome"></i></i></div>
      <p>Castales</p>
    </button>
  </div>
  <div class="filter">
    <button type="submit" name="category" value="Amazing Pools">
      <div><i class="fa-solid fa-person-swimming"></i></i></div>
      <p>Amazing Pools</p>
    </button>
  </div>
  <div class="filter">
    <button type="submit" name="category" value="Boats">
      <div><i class="fa-solid fa-sailboat"></i></div>
      <p>Boats</p>
    </button>
  </div>
  <div class="filter">
    <button type="submit" name="category" value="Towers">
      <div><i class="fa-solid fa-tower-observation"></i></div>
      <p>Towers</p>
    </button>
  </div>
  <div class="filter">
    <button type="submit" name="category" value="Camping">
      <div><i class="fa-solid fa-tents"></i></div>
      <p>Camping</p>
    </button>
  </div>
  <div class="filter">
    <button type="submit" name="category" value="Farms">
      <div><i class="fa-solid fa-wheat-awn"></i></div>
      <p>Farms</p>
    </button>
  </div>

  

  <div class="tax-toggle">
    <div class="form-check form-switch form-check-reverse tax-toggle-child">
  <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
  <label class="form-check-label" for="flexSwitchCheckDefault">Display total before taxes</label>
</div>
  </div>
</div>
</form>



<!-- filtered listings -->
<div class="row row-cols-lg-4 row-cols-md-3 row-cols-sm-2 row-cols-1">
    <% for(listing of filteredListings){ %>

        <a href="/listings/<%=listing._id%>" class="listing-links">
            <div class="card listing-card col">
                <img src="<%= listing.image.url %>" class="card-img-top"  style="height: 20rem;" alt="Listing Image">
                <!-- overlay -> img select effect  -->
                <div class="card-img-overlay"></div>

                <div class="card-body">
                    <p class="card-text">
                        <b> <%= listing.title %> </b>
                        <br>
                        &#8377;<%= listing.price.toLocaleString('en-IN') %>/night 
                        <i class="tax-info">&ensp; +18% GST</i>
                    </p>
                </div>
            </div>
        </a>
    <% } %> 
</div>
    
<!-- filtered category listings -->  
              
    <script>
      let taxSwitch = document.querySelector('#flexSwitchCheckDefault');
      taxSwitch.addEventListener('click', () =>{
        // console.log("button clicked");
        let taxInfo = document.getElementsByClassName('tax-info');
        // console.log(taxInfo);
        for(info of taxInfo){
        if (info.style.display != 'inline') {
          info.style.display = 'inline';
        } else{
          info.style.display = 'none';
        }
      }
      })

    </script>